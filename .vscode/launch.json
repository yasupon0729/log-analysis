{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Next.js: Server-side",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/nextjs",
      "runtimeExecutable": "${workspaceFolder}/nextjs/node_modules/.bin/next",
      "runtimeArgs": ["dev"],
      "skipFiles": ["<node_internals>/**"],
      "env": {
        "NODE_OPTIONS": "--inspect"
      },
      "console": "integratedTerminal",
      "serverReadyAction": {
        "pattern": "- Local:.+(https?://\\S+|http://\\S+)",
        "uriFormat": "%s",
        "action": "debugWithChrome"
      }
    },
    {
      "name": "Next.js: Client-side (Chrome)",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:3729",
      "webRoot": "${workspaceFolder}/nextjs",
      "sourceMaps": true,
      "sourceMapPathOverrides": {
        "webpack://_N_E/*": "${workspaceFolder}/nextjs/*"
      }
    }
  ],
  "compounds": [
    {
      "name": "Full Stack: Server + Client",
      "configurations": [
        "Next.js: Server-side",
        "Next.js: Client-side (Chrome)"
      ],
      "stopAll": true
    }
  ]
}
